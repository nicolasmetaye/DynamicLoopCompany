@inherits Umbraco.Web.Mvc.UmbracoViewPage<DynamicLoopCompany.Components.Models.Home.InteractiveTextModel>
@{
    Layout = null;
}

@foreach (var wordItem in Model.LeftText.Union(Model.RightText).Where(model => !string.IsNullOrEmpty(model.BodyText)))
{
    <div id="p@(wordItem.PopUpId)" class="home-pop-up-container">
         @Html.Raw(wordItem.BodyText)
    </div>
}
<div class="main-content">
    <div class="main-content-subcolumn-left">
        <div class="main-content-subcolumn-left-content">
            @foreach (var wordItem in Model.LeftText)
            {
                if (string.IsNullOrEmpty(wordItem.BodyText))
                {
                    @wordItem.TextToHighlight
                }
                else
                {
                    <span id="@wordItem.PopUpId" class="highlight">@wordItem.TextToHighlight</span>
                }
            }
        </div>
    </div>
    <div class="block">
    </div>
    <div class="main-content-subcolumn-right">
        <div class="main-content-subcolumn-right-content">
            @foreach (var wordItem in Model.RightText)
            {
                if (string.IsNullOrEmpty(wordItem.BodyText))
                {
                    @wordItem.TextToHighlight
                }
                else
                {
                    <span id="@wordItem.PopUpId" class="highlight">@wordItem.TextToHighlight</span>
                }
            }
        </div>
    </div>
</div>
<div class="clear-all"></div>
<div class="main-content-body">
    @Html.Raw(Model.BodyText)
</div>
